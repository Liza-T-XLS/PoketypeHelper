{% extends "base.html.twig" %}
{% block menu_home %}class="current"{% endblock %}
{% block title %}Pokétype Helper - Home{% endblock %}
{% block body %}

<main id="main">
    <p>Which type of Pokémon are you fighting?</p>
    <div id="types">
        
        {% for type in types %}
            <button class="{{type.name}}" data-type-name="{{type.name}}" data-type-weaknesses="{{type.weaknesses|json_encode|e('html_attr')}}">{{type.name}}</button>
        {% endfor %}
    </div>
    <div id="weaknesses">
        {% for type in types %}
            <img id="{{type.name}}" src="{{ asset('images/' ~ type.name ~ '.png') }}" alt="{{ type.name }}">
        {% endfor %}
        <p id="choice"></p>
        <ul id="typeList">
        </ul>
    </div>


</main>
{% endblock %}